<div class="container mt-5" id="signupForm">
    <form action="/user/change?_method=PUT" method="POST" id="changePassword" class="row g-4">
    <div class="row">
        <div class="col-md-9">
            <label for="password" class="form-label">Old Password</label>
            <input type="password" class="form-control" id="oldPassword" name="oldPassword" required />
        </div>
        {{#if error}}
            <div class="form-error">{{error}}</div>
        {{/if}}
    </div>
    <div class="row">
        <div class="col-md-9">
            <label for="password" class="form-label">New Password</label>
            <input type="password" class="form-control" id="password" name="password" required />
        <div id="passAlert"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <label for="confirmPassword" class="form-label">New Confirm Password</label>
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required />
        </div>
    </div>
    <div class="row">
        <div class="row-12">
            <button type="submit" class="btn btn-primary">Update Password</button>
        </div>
    </div>
    </form>
</div>

<script src="/script/changePassword/changePasswordForm.js"></script>