            <div id="background">

                <!-- containing images which will be shown on a min-width -->
                <div class="faq-container-desktop-illustrations flex-column-center">

                    <img src="/image/Help Page Images/illustration-woman-online-desktop.svg"
                        alt="illustration of woman operating a computer" class="desktop-illustration-main-image">
                    <img src="/image/Help Page Images/bg-pattern-desktop.svg" alt="background shadow for illustration"
                        class="desktop-illustration-background-image">

                </div>

                <!-- containing images which will be shown when above images are not shown -->
                <div class="faq-container-mobile-illustrations">
                    <img src="/image/Help Page Images/illustration-woman-online-mobile.svg"
