                </button>
                <!-- Links -->
                {{#if loggedIn}}
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto">
                        <!-- For Styling -->
                        <div class="hori-selector">
                            <div class="left"></div>
                            <div class="right"></div>
                        </div>
                        <!-- Nav Links -->
                        <li class="nav-item">
                            <a class="nav-link" href="/about">
                                About
                            </a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/help">
                                Help
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="navbarContent" href="/user/profile">
                                Profile
                            </a>
                        </li>
                    </ul>
                </div>

                {{else}}
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto">
                        <!-- For Styling -->
                        <div class="hori-selector">
                            <div class="left"></div>
                            <div class="right"></div>
                        </div>
                        <!-- Nav Links -->
                        <li class="nav-item">
                            <a class="nav-link" href="/about">
                                About
                            </a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/help">
                                Help
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="navbarContent" href="/login">
                                Sign in
                            </a>
                        </li>
                    </ul>
                </div>
                {{/if}}
            </nav>
        </header>

        <main>

