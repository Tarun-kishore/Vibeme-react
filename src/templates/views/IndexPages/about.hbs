<!-- About Page code-->
<!-- Reason for using handle bar is to make our navbar dynamic so that the content of navbar changes depending on user is logged in or not-->

<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>

    <!-- Meta tags -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Website Name -->
    <title>VibeMe</title>

    <!-- Website icon on title bar -->
    <link rel="icon" href="/image/Logo/title.png" type="image/png">

    <!-- Bootstraps CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/d021e746cf.js" crossorigin="anonymous"></script>

    <!-- Font Style -> Space Mono Regular 400 for navbar and footer -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Lato:wght@300&family=Nunito+Sans:wght@600&family=Roboto:wght@500&display=swap"
        rel="stylesheet">

    <!-- Font Style for navbar and footer -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@900&display=swap" rel="stylesheet">

    <!-- AOS library stylesheet -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

    <!-- Custom CSS stylesheet for navbar and footer-->
    <link rel="stylesheet" href="/css/Login Page/style.css">

    <!-- New CSS stylesheet -->
    <link rel="stylesheet" href="/css/About Page/AboutPageStyles.css">

</head>

<body>

    <!-- About Page -->
    <div class="AboutPage">

        <!-- Navbar -->
        <header>
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-mainbg">
                <!-- Logo -->
                <a class="navbar-brand navbar-logo" href="/">VibeMe</a>
                <!-- Collapse Button -->
                <button id="tog" class="navbar-toggler button" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <!-- Hamburger Icon when screen size is less -->
                    <span class="navbar-toggler-icon"><i class="fas fa-bars nav-button"></i></span>
                </button>
                <!-- Links -->
                <!-- If user is logged in then this part of navbar will be shown to him -->
                <!-- Value of loggedIn is sent by backend telling the status of user-->
                {{#if loggedIn}}
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto">
                        <!-- For Styling -->
                        <div class="hori-selector">
                            <div class="left"></div>
                            <div class="right"></div>
                        </div>
                        <!-- Nav Links -->
                        <li class="nav-item active">
                            <a class="nav-link" href="/about">
                                About
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/help">
                                Help
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="navbarContent" href="/user/profile">
                                Profile
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Else this section of code will be displayed -->
                {{else}}
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto">
                        <!-- For Styling -->
                        <div class="hori-selector">
                            <div class="left"></div>
                            <div class="right"></div>
                        </div>
                        <!-- Nav Links -->
                        <li class="nav-item active">
                            <a class="nav-link" href="/about">
                                About
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/help">
                                Help
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="navbarContent" href="/login">
                                Sign in
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- End of if statement -->
                {{/if}}
            </nav>
        </header>

        <!-- Main code -->
        <main>
            <!-- 1st section Background image which changes it position depending how much user has scroll -->
            <section id="stunning-header">

                <!-- Div containing the image -->
                <div class="background-image"></div>

                <!-- Contains the text -->
                <div class="container">

                    <div class="stunning-header-content">

                        <div class="stunning-content-item">
                            <h1 class="stunning-header-title">About us</h1>
                        </div>

                        <div class="stunning-content-item">
                            <!-- Goes to login page after clicking home text on the image -->
                            <a class="stunning-paragraph-title" href="/login">Home</a>
                        </div>

                    </div>

                </div>
            </section>

            <!-- 2nd section which contains the text after the background image -->
            <section id="stunning-question">

                <section class="py-5 text-center container">

                    <!-- Using bootstrap to make our website responsive -->
                    <div class="row py-lg-5">

                        <div class="col-lg-6 col-md-8 mx-auto stunning-question-text">

                            <h6>SOCIAL NETWORK</h6>
                            <h1 class="fw-light">Why Choose VibeMe?</h1>

                            <!-- Just written random text using loren ipsum generator -->
                            <p class="lead text-muted">
                                Give people the power to build community and bring the world closer and VIBE together.
                            </p>

                        </div>

                    </div>

                </section>

            </section>

            <!-- 3rd section which contain feature images -->
            <section id="stunning-features">

                <!-- here also used bootstrap for responsive nature -->
                <div class="row">

                    <!-- Here data-aos is element to javascript AOS library which provide onscroll animation -->
                    <!-- So here we are using zoom-in animation for each feature image -->
                    <div class="col-lg-4 col-md-6" data-aos="zoom-in">
                        <img src="/image/About Page Images/Features Image/info1.webp" alt="Feature Photo">
                        <h3>The Best Interface</h3>
                        <p>We have a user friendly and responsive UI, which is easily accessible by everyone.</p>
                    </div>

                    <div class="col-lg-4 col-md-6" data-aos="zoom-in">
                        <img src="/image/About Page Images/Features Image/info2.webp" alt="Feature Photo">
                        <h3>Messaging System</h3>
                        <p>Vibeme supports real time chatting between users. No matter where you are!</p>
                    </div>

                    <div class="col-lg-4 col-md-6" data-aos="zoom-in">
                        <img src="/image/About Page Images/Features Image/info3.webp" alt="Feature Photo">
                        <h3>Stand Out</h3>
                        <p>Connect with more people, build influence, and create compelling content that's distinctly
                            yours.</p>
                    </div>

                    <div class="col-lg-4 col-md-6" data-aos="zoom-in">
                        <img src="/image/About Page Images/Features Image/info4.webp" alt="Feature Photo">
                        <h3>Incredible Features</h3>
                        <p>It ensures complete sharing of vibes with your loved one with total security.</p>
                    </div>

                    <div class="col-lg-4 col-md-6" data-aos="zoom-in">
                        <img src="/image/About Page Images/Features Image/info5.webp" alt="Feature Photo">
                        <h3>Grow With Us</h3>
                        <p>Share and grow your brand with our diverse, global community.
                        </p>
                    </div>

                    <div class="col-lg-4 col-md-6" data-aos="zoom-in">
                        <img src="/image/About Page Images/Features Image/info6.webp" alt="Feature Photo">
                        <h3>Friendly Support</h3>
                        <p>We're committed to fostering a safe and supportive community for everyone. </p>
                    </div>

                </div>

            </section>

            <!-- 4th section which gives counting animation whenever user scrolled this much then only it starts -->
            <section id="stunning-counting">

                <!-- Used bootstrap for responsive and zoom-out animation-->
                <div class="row" data-aos="zoom-out">

                    <!-- The animation is done using JS -->
                    <div class="col-lg-3 col-md-6">
                        <span class="counting-number"></span>
                        &nbsp;
                        <div class="units">
                            K<div>+</div>
                        </div>
                        <h3>Registered Members</h3>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <span class="counting-number"></span>
                        &nbsp;
                        <div class="units">
                            <div>+</div>
                        </div>
                        <h3>Features Available</h3>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <span class="counting-number"></span>
                        &nbsp;
                        <div class="units">
                            <div>K</div>
                        </div>
                        <h3>Friend Groups</h3>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <span class="counting-number"></span>
                        &nbsp;
                        <div class="units">
                            <div>K</div>
                        </div>
                        <h3>Favourite Pages</h3>
                    </div>

                </div>

            </section>

            <!-- 5th section telling more about VibeMe -->
            <section id="learn-more">

                <!-- Bootstrap for responsive nature -->
                <div class="content row">

                    <!-- Used fade right animation for this div -->
                    <div class="col-lg-6" data-aos="fade-right">
                        <div>
                            <div class="decoration-div">
                                <h6>The VibeMe</h6>
                                <h2>Learn a little more about <span>VibeMe</span> and how we started </h2>
                                <hr class="learn-more-decoration">
                            </div>
                            <p> We started this project 3 months ago in Our college as a semester project by our team.
                                And due to this project we got full marks , hope you will give us full marks for our
                                beautiful efforts !</p>
                        </div>
                    </div>

                    <!-- used fade left animation for this div -->
                    <div class="col-lg-6" data-aos="fade-left">
                        <img src="/image/About Page Images/Learn More/screen.webp" alt="Learn Image">
                    </div>

                </div>

            </section>

            <!-- 6th section styling same as of 2nd section -->
            <section id="stunning-question">
                <section class="py-5 text-center container">
                    <div class="row py-lg-5" data-aos="fade-down">
                        <div class="col-lg-6 col-md-8 mx-auto stunning-question-text">
                            <h6>The VibeMe</h6>
                            <h1 class="fw-light">Meet our Team</h1>
                            <p class="lead text-muted">Gandhi ji have 3 monkeys 🙈🙉🙊 and our team have four , all of
                                us have given there best to this project to make you guys VIBE.</p>
                        </div>
                    </div>
                </section>
            </section>

            <!-- 7th section containing details about the team member -->
            <section id="stunning-team-members">

                <!-- Bootstrap used here -->
                <div class="row">

                    <!-- fade up animation to each of div -->
                    <div class="col-lg-4 col-md-6" data-aos="fade-up">
                        <div class="members-zoom">
                            <img src="/image/About Page Images/Team Member/team1.jpg" alt="Member Photo">
                        </div>
                        <h5>Yash Bansal</h5>
                        <p>Lead Frontend Developer</p>
                        <ul>
                            <li>
                                <a class="social-item linkedIn"
                                    href="https://www.linkedin.com/in/yash-bansal-057b9a203/" target="_blank">
                                    <i class="fab fa-linkedin"></i>
                                </a>
                            </li>
                            <li><a class="social-item instagram" href="https://www.instagram.com/yashban14/"
                                    target="_blank">
                                    <i class="fab fa-instagram"></i>
                                </a></li>
                            <li><a class="social-item twitter" href="https://twitter.com/YashBan51702775"
                                    target="_blank">
                                    <i class="fab fa-twitter"></i>
                                </a></li>
                        </ul>
                    </div>

                    <div class="col-lg-4 col-md-6" data-aos="fade-up">
                        <div class="members-zoom">
                            <img src="/image/About Page Images/Team Member/team2.jpg" alt="Member Photo">
                        </div>

                        <h5>Himanshu Rathore</h5>
                        <p>Lead Designer</p>
                        <ul>
                            <li>
                                <a class="social-item linkedIn"
                                    href="https://www.linkedin.com/in/himanshu-rathore-629705206/" target="_blank">
                                    <i class="fab fa-linkedin"></i>
                                </a>
                            </li>
                            <li><a class="social-item instagram" href="https://www.instagram.com/hhimanshu.r/"
                                    target="_blank">
                                    <i class="fab fa-instagram"></i>
                                </a></li>
                            <li><a class="social-item facebook" href="#">
                                    <i class="fab fa-facebook-square"></i>
                                </a></li>
                        </ul>
                    </div>

                    <div class="col-lg-4 col-md-6" data-aos="fade-up">
                        <div class="members-zoom">
                            <img src="/image/About Page Images/Team Member/team3.jpg" alt="Member Photo">
                        </div>
                        <h5>Tarun Kishore</h5>
                        <p>Lead Backend Developer</p>
                        <ul>
                            <li>
                                <a class="social-item linkedIn"
                                    href="https://www.linkedin.com/in/tarun-kishore-b589b2201" target="_blank">
                                    <i class="fab fa-linkedin"></i>
                                </a>
                            </li>
                            <li><a class="social-item instagram" href="#">
                                    <i class="fab fa-instagram"></i>
                                </a></li>
                            <li><a class="social-item google" href="#">
                                    <i class="fab fa-google-plus-g"></i>
                                </a></li>
                        </ul>
                    </div>

                    <div class="col-lg-4 offset-lg-4 col-md-6" data-aos="fade-up">
                        <div class="members-zoom">
                            <img src="/image/About Page Images/Team Member/team4.jpg" alt="Member Photo">
                        </div>
                        <h5>Mohit </h5>
                        <p>Lead Designer</p>
                        <ul>
                            <li>
                                <a class="social-item linkedIn"
                                    href="https://www.linkedin.com/in/mohit-kumar-47381a215/" target="_blank">
                                    <i class="fab fa-linkedin"></i>
                                </a>
                            </li>
                            <li><a class="social-item instagram" href="https://www.instagram.com/mohit_aesthetic__/"
                                    target="_blank">
                                    <i class="fab fa-instagram"></i>
                                </a></li>
                            <li><a class="social-item facebook" href="#">
                                    <i class="fab fa-facebook-square"></i>
                                </a></li>
                        </ul>
                    </div>

                </div>

            </section>

            <!-- 8th section containing an image telling to join -->
            <section id="stunning-join">

                <!-- Bootstrap used -->
                <div class="join-box row">
                    <div class="col-lg-4 col-md-4">
                        <img class="join-person" src="/image/About Page Images/Join/guy.png" alt="person saying hi">
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <img class="join-rocket" src="/image/About Page Images/Join/rocket1.png" alt="rocket">
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <button class="btn .btn-lg join-button" onclick="location.href = '\login';">
                            Start Making Friends Now
                        </button>
                    </div>
                </div>

            </section>

        </main>

        <!-- Footer of page -->
        <footer>
            <p class="text-center">&copy; 2021 All rights Reserved</p>
        </footer>

        <!-- Button to go on top of page -->
        <a id="back-to-top" class="Invisible" href="#">
            <i class="fas fa-arrow-up"></i>
        </a>

    </div>

    <!-- Bootstrap Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
        crossorigin="anonymous"></script>

    <!-- JQuery Script -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- AOS library script -->
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init({
            offset: 200,
            duration: 800
        });
    </script>

    <!-- Custom Script -->
    <script src="/script/script.js"></script>

    <!-- New Script -->
    <script src="/script/AboutPageScript/script.js"></script>

</body>

</html>