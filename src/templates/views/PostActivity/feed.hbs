    <div class="view-wrapper">
        <div id="posts-feed" class="container">
            <!-- row-cols-lg-2 -->
            <div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-2">

                {{#if post}}

                {{#each post}}

                {{!-- {{>post this}} --}}
                <div class="col post-feed-item">
                    <div class="card">
                        <div class="card-image">
                            <figure class="image is-4by3">
                                <a>
                                    <img src="{{this.image}}" class="card-img-top" alt="{{this.content}}">
                                </a>
                            </figure>
                        </div>
                        <div class="card-body">
                            <div class="media">
                                <div class="media-left">
                                    <div class="post-avatar" onclick="window.location.href='/user/view/{{this.owner}}'">
                                        <img class="avatar" src="{{this.userImage}}" alt="user photo">
                                    </div>
                                </div>
                                <div class="media-content">
                                    <span>{{this.creator}}</span>
                                    <span class="created-date">{{this.createdAt}}</span>
                                </div>
                                <div class="media-right">
                                    <span>{{this.likesCount}}</span>
                                    <button class="button like-button like" id="{{this.id}}" onclick="hitlike(this)">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                            viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                            stroke-linecap="round" stroke-linejoin="round"
                                            class="feather feather-heart">
                                            <path
                                                d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z">
                                            </path>
                                        </svg>
                                    </button>
                                    <button class="button comment-button"
                                        onclick="window.location.href='/post/view/{{this.id}}'">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                            viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                            stroke-linecap="round" stroke-linejoin="round"
                                            class="feather feather-message-circle">
                                            <path
                                                d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z">
                                            </path>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}

                {{else}}
                <h1>no post yet</h1>

